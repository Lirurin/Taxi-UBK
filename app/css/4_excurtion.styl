.excursion
  width 100%
  min-height 850px
  overflow hidden
  &__title
    margin-bottom 13px
    color #505050
    text-align center
    font-size 24px
    text-transform uppercase

    &--blue
      color #4680AF

  &__container
    display flex
    flex-flow row wrap
    justify-content center
    align-items center
    max-width 1170px
    height 100%
    text-align center
    margin 0 auto 15px auto

  &__place
    position relative
    width 354px
    height 362px
    border-radius 5px
    margin 15px
    overflow hidden

  &__place-image
    width auto
    height 100%

  &__place-text
    position absolute
    z-index 1
    bottom 16px
    left 50%
    width 100%
    color #ffffff
    font-size 14px
    text-align center
    text-transform uppercase
    text-shadow 0px 2px 4px #000000
    transform translateX(-50%)

  &__place-shadow
    position absolute
    z-index 0
    top 0
    left 0
    width 100%
    height 100%
    background linear-gradient(180deg, rgba(0, 0, 0, 0) 70%, rgba(1, 33, 49, 0.2) 100%)
