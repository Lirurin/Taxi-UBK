.booking
  display flex
  flex-direction row
  justify-content center
  align-items center
  width 100%
  min-height 422px
  background url('../img/sea.jpg') 35% center no-repeat
  background-size cover
  box-shadow inset 0 10px 20px rgba(0, 0, 0, 0.5)
  overflow hidden

  &:after
    content ''
    min-height inherit
    font-size 0

  &__container
    display flex
    flex-flow row wrap
    justify-content space-around
    align-items center
    max-width 1170px
    width 100%
    height 100%

  &__description
    display flex
    flex-direction column
    width 560px
    margin 20px 0
    text-align right

  &__title
    color #ffffff
    font-size 24px
    text-transform uppercase
    text-shadow 0 2px 2px rgba(0, 0, 0, 0.25)

  &__line-breaker
    &:after
      content "\a"
      white-space pre

  &__offer
    margin 17px 0
    color #ffffff
    font-size 18px
    text-shadow 0 2px 2px rgba(0, 0, 0, 0.25)

    &--bold
      font-weight 800

  &__duty
    color #ffffff
    font-size 14px
    font-weight 800
    text-shadow 0 2px 2px rgba(0, 0, 0, 0.25)

  &__form
    display flex
    flex-direction column
    width 430px
    padding-left 20px
    margin 20px 0

  &__input
    width 294px
    height 42px
    padding-left 30px
    border 1px solid #FFFFFF
    border-radius 5px
    margin 9px 0
    color #494949
    font-size 14px
    box-shadow inset 2px 2px 4px rgba(0, 0, 0, 0.5)

  &__comment
    padding 11px 30px
    background url(../img/commentary.png) no-repeat right #fff
    background-position 101% 19px
    resize none

  &__submit
    position: relative
    z-index 1
    display block
    width 294px
    height 42px
    border 1px solid #F2C94C
    border-radius 5px
    margin-top 9px
    background-color rgba(0, 0, 0, 0.7)
    color #F2D74A
    font-weight 800
    font-size 14px
    line-height 14px
    text-transform uppercase
    transition all 0.5s ease-in-out

    &:hover
      border 1px solid #F2994A
      background-color #F2994A
      color #fff
      text-shadow 0 1px 2px #F24A4A
      box-shadow 0 6px 12px #F2994A70
      transition all 0.3s ease-in-out
      cursor pointer

      &:before
        display block
        transform-origin center left
        transform scaleX(1)
